<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Sharpie.ViewModels"
        Title="Create a New File - Sharpie"
        Width="400" Height="500"
        x:Class="Sharpie.Views.FileCreationWindow"
        x:DataType="vm:FileCreationViewModel"
        >
    
    <Border BorderBrush="{DynamicResource SystemAccentColor}"
            BorderThickness="2"
            Margin="2">
        
        <StackPanel Orientation="Vertical" Spacing="15" Margin="20,30" >
            <TextBlock Text="Image Size" FontSize="16" FontWeight="Bold" HorizontalAlignment="Left" />
            <Separator/>
            <StackPanel Orientation="Horizontal" Spacing="5">
                <TextBlock Text="Presets: "></TextBlock>
                
                <Button Content="Options">
                    <Button.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuItem Header="A1"/>
                            <MenuItem Header="A3" />
                            <MenuItem Header="A4"/>
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
            
            </StackPanel>
       
            <StackPanel Orientation="Horizontal" Spacing="5">
                <TextBlock Text="Width: "></TextBlock>
                <NumericUpDown Minimum="1"
                               Value="{Binding CanvasWidth}"
                               FormatString="0"
                               Watermark="Enter Width">
                </NumericUpDown>
           
            </StackPanel>
       
            <StackPanel Orientation="Horizontal" Spacing="5">
                <TextBlock Text="Height: "></TextBlock>
                <NumericUpDown Minimum="1"
                               Value="{Binding CanvasHeight}"
                               FormatString="0"
                               Watermark="Enter Height">
                </NumericUpDown>
           
            </StackPanel>
       
            <Separator/>
       
            <TextBlock Text="{Binding FileCreationSummary}"></TextBlock>
       
            <StackPanel Orientation="Horizontal" Spacing="5" HorizontalAlignment="Right">
                <Button Content="Create" Command="{Binding CreateFileCommand}"></Button>
                <Button Content="Cancel" Command="{Binding CancelCommand}"></Button>
            </StackPanel>
       
        </StackPanel>
    </Border>
    
 
</Window>